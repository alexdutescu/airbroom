<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ro.alex.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ro.alex.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel debugId="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="numar">
            <div class="{style.label}">Numar</div>
            <div class="{style.value}">
                <g:IntegerBox ui:field="numar"/>
            </div>
        </div>
    <div id="clasa">
            <div class="{style.label}">Clasa</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="clasa"/>
            </div>
        </div>
    <div id="avion">
            <div class="{style.label}">Avion</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="avion"/>
            </div>
        </div>
    <div id="zbor">
            <div class="{style.label}">Zbor</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="zbor"/>
            </div>
        </div>
    <div id="ocupat">
            <div class="{style.label}">Ocupat</div>
            <div class="{style.value}">
                <g:CheckBox ui:field="ocupat"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
