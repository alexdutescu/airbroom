<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ro.alex.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ro.alex.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel debugId="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="nume">
            <div class="{style.label}">Nume</div>
            <div class="{style.value}">
                <g:TextBox ui:field="nume"/>
            </div>
        </div>
    <div id="prenume">
            <div class="{style.label}">Prenume</div>
            <div class="{style.value}">
                <g:TextBox ui:field="prenume"/>
            </div>
        </div>
    <div id="adresa">
            <div class="{style.label}">Adresa</div>
            <div class="{style.value}">
                <g:TextBox ui:field="adresa"/>
            </div>
        </div>
    <div id="user">
            <div class="{style.label}">User</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="user"/>
            </div>
        </div>
    <div id="abonament">
            <div class="{style.label}">Abonament</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="abonament"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
